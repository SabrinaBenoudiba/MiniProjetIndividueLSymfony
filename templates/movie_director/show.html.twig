{% extends 'base.html.twig' %}

{% block title %}MovieDirector{% endblock %}

{% block body %}
    <h1>MovieDirector</h1>


    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie_director.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ movie_director.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ movie_director.surname }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{{ movie_director.birthdate ? movie_director.birthdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Filmografy</th>
                   {% for movie in movie_director.movies %}
                <td>
                    {{ movie.movieTitle }}
                </td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_movie_director_index') }}">back to list</a>

    <a href="{{ path('app_movie_director_edit', {'id': movie_director.id}) }}">edit</a>

    {{ include('movie_director/_delete_form.html.twig') }}

 
   
    
{% endblock %}
