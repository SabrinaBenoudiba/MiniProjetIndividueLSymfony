{% extends 'base.html.twig' %}

{% block title %}Type de films{% endblock %}

{% block body %}
    <h1>Films en fonction du Type</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie_genre.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ movie_genre.TypeName }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ movie_genre.Description }}</td>
            </tr>
          <tr>
            <th>Liste des films</th>
            <td>
                {% for movie in movie_genre.movies %}
                    <a href="{{ path('app_movie_show', {id: movie.id}) }}">
                        {{ movie.movieTitle }}
                    </a><br>
                {% else %}
                    Aucun film pour ce genre.
                {% endfor %}
            </td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_movie_genre_index') }}">back to list</a>

    <a href="{{ path('app_movie_genre_edit', {'id': movie_genre.id}) }}">edit</a>

    {{ include('movie_genre/_delete_form.html.twig') }}
{% endblock %}
