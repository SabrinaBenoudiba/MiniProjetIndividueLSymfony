                </tr>
                <tr>
                    <th>Durée du film</th>
                    <td>{{ movie.movieDuration }} minutes</td>
                </tr>
                {# <tr>
                    <th>Image du film</th>
                    <td>{{ movie.image }}</td>
                </tr> #}

            </tbody>
        </table>


</div>
    
{% endblock %}