{% extends 'base.html.twig' %}

{% block title %}Film{% endblock %}

{% block body %}

<div class="container">
    <h1>Film</h1>
        {# <img src="{{ asset('uploads/images/' ~ product.image) }}" alt="Photo de profil" style="max-width:180px; border-radius:50%;"> #}
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ movie.id }}</td>
